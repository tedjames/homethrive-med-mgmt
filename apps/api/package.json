{
  "name": "@homethrive/api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Fastify-based API layer for Homethrive Medication Manager",
  "main": "./dist/server.js",
  "types": "./dist/server.d.ts",
  "exports": {
    ".": {
      "import": "./dist/server.js",
      "types": "./dist/server.d.ts"
    },
    "./lambda": {
      "import": "./dist/lambda.js",
      "types": "./dist/lambda.d.ts"
    }
  },
  "scripts": {
    "dev": "tsx --env-file=.env src/server.ts",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit",
    "start": "node dist/server.js",
    "test": "./scripts/test.sh",
    "test:smoke": "./scripts/smoke.sh",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "check": "pnpm lint && pnpm typecheck"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.700.0",
    "@clerk/fastify": "^2.6.9",
    "@fastify/aws-lambda": "^6.1.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/sensible": "^6.0.4",
    "@homethrive/core": "workspace:*",
    "@homethrive/db": "workspace:*",
    "drizzle-orm": "^0.44.7",
    "fastify": "^5.6.2",
    "fastify-plugin": "^5.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.159",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "pino-pretty": "^13.1.3",
    "tsx": "^4.19.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.50.0",
    "vitest": "^4.0.15"
  }
}
